@model IndexViewModel

@{
    ViewData["Title"] = "Zoos";
}

<h1 class="page-title">Our zoos</h1>

<div style="text-align: end;">
    <input class="btn btn-success" style="margin: 10px;" type="button" value="Add new location" onclick="location.href='@Url.Action("Create", "Zoos")'" />
</div>


<table class="table">
    <thead>
        <tr>
            <th>
                №
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zoos.FirstOrDefault().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zoos.FirstOrDefault().Adress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zoos.FirstOrDefault().TicketPrice)
            </th>
            <th style="text-align:end">Actions</th>
        </tr>
    </thead>
    <tbody>
        @{int i = 1;}
        @foreach (var item in Model.Zoos)
        {
        <tr>
            <td>
                @i @{i++;}
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TicketPrice)
            </td>
            <td style="text-align:end">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-circle btn-edit"><i class="far fa-edit"></i></a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-circle btn-info"><i class="fas fa-info"></i></a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-circle btn-danger"><i class="far fa-trash-alt"></i></a>
            </td>
        </tr>
        }
    </tbody>
</table>

@if (Model.PageViewModel.HasPreviousPage)
{
    <a asp-action="Index"
       asp-route-page="@(Model.PageViewModel.PageNumber - 1)"
       class="btn btn-outline-dark">
        <i class="fas fa-angle-left"></i>
        Previous
    </a>
}
@if (Model.PageViewModel.HasNextPage)
{
    <a asp-action="Index"
       asp-route-page="@(Model.PageViewModel.PageNumber + 1)"
       class="btn btn-outline-dark">
        Next
        <i class="fas fa-angle-right"></i>
    </a>
}